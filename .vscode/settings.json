{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/app-list.json": true,
        "**/.venv/": true,
        "**/.vscode/": false,
        "**/__pycache__/": true,
        "**/.gitignore": false,
        "**/.python-version": true,
        "**/main.py": false,
        "uv.lock": true,
        "**/README.md": false,
        "*.code-profile": true,
        "base_robot*.py": false,
        "requirements.txt": true,
        "pyproject.toml": false,
        "colorTest.py": false,
        "master_program.py": false,
        "battery_test.py": false,
        "LICENSE": true,
        "utils.py": false,
        ".idea/": false,
        ".mypy_cache": true
    },
    "task.allowAutomaticTasks": "on",
    "git.postCommitCommand": "sync",
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "editor.rulers": [
        80
    ],
    "black-formatter.args": [
        "--line-length",
        "79"
    ]
}